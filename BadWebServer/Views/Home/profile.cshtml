@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using GoodServer.Models
@model GoodServer.Data.User
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
@if (this.TempData.ContainsKey("Success"))
{
    <div class="alert alert-success">
        <p>@this.TempData["Success"]</p>
    </div>
}
@if (this.TempData.ContainsKey("Danger"))
{
    <div class="alert alert-danger">
        <p>@this.TempData["Danger"]</p>
    </div>
}
<div class="row">
    <div class="col-3">
        @if (string.IsNullOrEmpty(this.Model.PictureUrl))
        {
            <img class="img-fluid bg-secondary" src="/images/empty-avatar.jpg" />
        }
        else
        {
            <img class="img-fluid bg-secondary" src="@Model.PictureUrl" />
        }
    </div>
    <div class="col-9">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input type="text" asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input type="text" asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label for="pictureUpload">Picture</label>
                <input type="file" name="pictureUpload" class="form-control" />
            </div>
            <input type="submit" class="btn btn-default" />
        </form>
    </div>
</div>